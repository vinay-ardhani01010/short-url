<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <title>Document</title>
  <style>
    body{
      background-color: #ECF0F1;
    }
  </style>
</head>
<body>

  <div class="w3-container w3-center w3-animate-left">
    <h1 style="text-align: center;color:green;">SHORT-URL</h1>
    <h4 style="text-align: center;">Shrink your Url's here.</h4>
  </div>

  <div class="container" style="margin-top:30px;">
   <div>
    <form action="/shortUrl" method="POST" class="my-4 form-inline">
      <label for='username'  class="mr-2">Username :</label>
       <input placeholder="Username" type="text" name="username" class="form-control col mr-2"></input>
      <label for="fullurl" class="mr-2">Url :</label>
      <input required placeholder="Url" type="url" name="lUrl" id="fullUrl" class="form-control col mr-2">
      <button class="btn btn-success mr-2" type="submit">Shrink</button>
    </form>
   </div>
   
    
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
            <td><a href="/delete/<%= shortUrl._id %>">
              <span class="glyphicon glyphicon-trash"></span>
            </a>
          </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <div style="text-align: center;">
    <a style="text-align: center;" href="/logout" class="btn btn-danger" role="button">Log     out</a>
  </div>
  
</body>
</html>